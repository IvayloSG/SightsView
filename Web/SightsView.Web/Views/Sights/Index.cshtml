@using SightsView.Web.ViewModels.Sights;
@model SightsUserInfoViewModel
@{
    this.ViewData["Title"] = "My Sight";
}

<br />

<div class="text-dark text-center">
    <h1>@Model.UserName Sight</h1>
</div>

<br />

<div class="row col-8 offset-2 divider text-center">
    <div class="border col-4 bg-dark text-white">
        <h2><strong> @Model.FollowersCount </strong></h2>

        <p><small>Followers</small></p>
    </div>
    <div class="border col-4 offset-4 bg-dark text-white">
        <h2><strong>@Model.CreationsCount</strong></h2>

        <p><small>Creations</small></p>
    </div>
  
</div>

<hr />

<div class="container col-md-12 justify-content-center">
    <form>
        <div class="row mb-2">
            <div class="col">

                <label>First name</label>
                <input type="text" class="form-control" placeholder="@Model.FirstName">
            </div>

            <div class="col">
                <label>Last name</label>

                <input type="text" class="form-control" placeholder="@Model.LastName">
            </div>
        </div>

        <div class="form-group">
            <label>Email</label>

            <input type="text" class="form-control" placeholder="@Model.Email">
        </div>

        <div class="form-group">
            <label>PhoneNumber</label>

            <input type="text" class="form-control" placeholder="@Model.PhoneNumber">
        </div>

        @if (this.User.Identity.Name == Model.UserName)
        {
            <div class="form-group">
                <button asp-area="Identity" asp-controller="Account" asp-action="Manage" type="submit" class="btn btn-block btn-dark">Edit Profile</button>
            </div>
        }
    </form>
</div>

<hr />

<br />

<div class="col-12 bg-dark text-white text-center">
    <h1>Creations</h1>
</div>

<br />

<div class="gallery" id="gallery">

</div>

<br />

<div>
    <button type="button" class="btn btn-dark btn-block mb-lg-5" onclick="onClickLoad()">Load More</button>
</div>

<input id="elementId" type="hidden" value="@Model.Id" />

<form method="post" id="antiForgeryForm"></form>

@section Scripts {
    <script asp-append-version="true" src="~/js/loadUser.js"></script>
}
