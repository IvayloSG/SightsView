@using SightsView.Web.ViewModels.Categories;
@model CategoryViewModel
@{
    this.ViewData["Title"] = "Edit Category";
}

<br />
<h1 class="text-center text-dark mb-lg-5">Edit Category</h1>

<form method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group col-md-6 offset-3">
        <input asp-for="Name" placeholder="@Model.Name" class="form-control text-center" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6 offset-3">
        <textarea asp-for="Description" placeholder="@Model.Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark col-md-4 offset-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}