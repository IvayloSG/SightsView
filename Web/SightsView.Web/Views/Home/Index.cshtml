@using SightsView.Web.ViewModels.Home
@model HomeIndexViewModel;
@{
    this.ViewData["Title"] = "Home Page";
}

<br />

<h1 class="text-dark text-center mb-lg-5">Welcome to SightsView</h1>

<br />

<h4 class="text-dark">Most popular locations</h4>

<div class="container">
    <div class="row">
        @foreach (var country in @Model.CountriesWithMostImages)
        {
            <div class="col-md-3 mb-3">
                <div class="img-thumbnail">
                    <img src="@country.DataURL" alt="..." class="img-thumbnail">
                    <a asp-for class="btn btn-dark text-center col-md-12" asp-controller="Creation" asp-action="Upload" asp-route-id=@country.Id>@country.Name</a>
                </div>
            </div>
        }
    </div>
</div>

<br />

<div class="gallery" id="gallery">
    @foreach (var creation in Model.Creations)
    {
        <div class="mb-3 pics animation all 1">
            <img class="img-fluid" src="@creation.DataUrl" alt="Card image cap">
        </div>
    }
</div>
