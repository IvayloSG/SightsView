@using SightsView.Web.ViewModels.Messages;
@model MessagesSendInputModel
@{
    this.ViewData["Title"] = "Send message";
}

<br />

<div class="text-dark text-center">
    <h1>Message</h1>
</div>

<hr />

<div class="container col-md-6 justify-content-center">
    <form method="post" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <textarea asp-for="Content" placeholder="Message" class="form-control text-center" rows="5"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark col-8 offset-2">Send Message</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
