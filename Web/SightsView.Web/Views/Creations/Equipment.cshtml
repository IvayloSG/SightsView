@using SightsView.Web.ViewModels.Creations;
@model CreationsEquipmentViewModel
@{
    this.ViewData["Title"] = "Creation Equipment";
}

<br />

<div class="text-dark text-center">
    <h1>Equipment</h1>
</div>

<hr />

<div class="container col-md-6 justify-content-center">
    <form enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <div class="input-group mb-1">
                <div class="input-group-prepend">
                    <div class="input-group-text">Brand</div>
                </div>

                <input type="text" class="form-control bg-white text-center" placeholder="@Model.BrandView" readonly>
            </div>

            <div class="input-group mb-1">
                <div class="input-group-prepend">
                    <div class="input-group-text">Model</div>
                </div>

                <input type="text" class="form-control bg-white text-center" placeholder="@Model.ModelView" readonly>
            </div>

            <div class="form-group mb-2">
                <textarea placeholder="@Model.AccessoariesView" class="form-control input-group-text bg-white text-center" rows="3" readonly></textarea>
            </div>

            <div class="form-group mb-2">
                <textarea placeholder="@Model.NotesView" class="form-control input-group-text bg-white text-center" rows="5" readonly></textarea>
            </div>

            @if (this.User.Identity.Name == Model.CreatorUserName)
            {
                <div class="form-row">
                    @if (Model.EquipmentId == null)
                    {
                        <button asp-controller="Equipments" asp-action="Add" asp-route-id=@Model.Id class="btn btn-dark col-8 offset-2">Add</button>
                    }
                    else
                    {
                        <button asp-controller="Equipments" asp-action="Edit" asp-route-id=@Model.Id class="btn btn-dark col-8 offset-2">Edit</button>
                    }
                </div>
            }
        </div>
    </form>
</div>
