@using SightsView.Web.ViewModels.Creations
@model CreationsViewModel
@{
    this.ViewData["Title"] = "Creation";
}

<div class="card mb-10 offset-1 mt-5">
    <img class="card-img-top rounded" src="@Model.DataUrl" alt="Card image cap">

    <div class="card-body">

        <div class="text-center">

            <a asp-controller="Profiles" asp-action="Index" asp-route-id="@Model.CreatorId" class="badge badge-dark float-lg-left mb-3">@Model.CreatorName</a>

            <span class="badge badge-pill badge-light float-lg-right">
                <img src="\visibility.png" alt="icon" style="width: 20px" />
                @Model.Views
            </span>

            @if (this.User.Identity.Name == Model.CreatorName)
            {
                <a class="btn-sm btn-dark" onclick="return confirm('Are you sure you want to delete?');" asp-controller="Creations" asp-action="Delete" asp-route-id=@Model.Id>Delete</a>
                <a class="btn-sm btn-dark" asp-controller="Creations" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>
            }
        </div>
        
        <hr />

        <div>

            <h3 class="card-title text-lg-center font-weight-bold">@Model.Title</h3>

            <p class="card-text text mb-lg-3">@Model.Description</p>
        </div>

        <hr />

        <div>
            <a asp-for class="btn btn-dark text-center col-md-11" onclick="goBack()">Close</a>

            <button asp-for class="btn btn-dark float-right" onclick="likeAction()">
                <img src="~/heart.png" alt="icon" style="width: 20px" />
                <span id="likes" class="badge badge-light">@Model.Likes</span>
            </button>
        </div>

    </div>

    <input id="creationId" type="hidden" value="@Model.Id" />
</div>

<form method="post" id="antiForgeryForm"></form>

@section Scripts {
    <script asp-append-version="true" src="~/js/likes.js"></script>
}