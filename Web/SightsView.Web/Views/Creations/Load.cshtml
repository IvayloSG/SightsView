@using SightsView.Web.ViewModels.Creations;
@model CreationsLoadViewModel
@{
    this.ViewData["Title"] = "Creation";
}

<div class="card col-md-10 offset-1 mt-5">
    <img class="card-img-top rounded" src="@Model.Creation.CreationDataUrl" alt="Card image cap">

    <div class="card-body">

        <div class="text-center">
            <a asp-controller="Profiles" asp-action="Index" asp-route-id="@Model.Creation.CreatorId" class="badge badge-dark float-lg-left mb-3">@Model.Creation.CreatorUserName</a>

            <span class="badge badge-pill badge-light float-lg-right">
                <img src="\visibility.png" alt="icon" style="width: 20px" />
                @Model.Creation.Views
            </span>

            <a asp-controller="Equipment" asp-action="Index" asp-route-id=@Model.Creation.Id class="badge badge-pill badge-light float-lg-right">
                <img src="~/camera.png" alt="icon" style="width: 20px" />
            </a>

            <a asp-controller="Creations" asp-action="Details" asp-route-id=@Model.Creation.Id class="badge badge-pill badge-light float-lg-right">
                <img src="~/info.png" alt="icon" style="width: 20px" />
            </a>

            @if (this.User.Identity.Name == Model.Creation.CreatorUserName)
            {
                <a class="btn-sm btn-dark" onclick="return confirm('Are you sure you want to delete?');" asp-controller="Creations" asp-action="Delete" asp-route-id=@Model.Creation.Id>Delete</a>
                <a class="btn-sm btn-dark" asp-controller="Creations" asp-action="Edit" asp-route-id=@Model.Creation.Id>Edit</a>
            }
        </div>

        <hr />

        <div>
            <h3 class="card-title text-lg-center font-weight-bold">@Model.Creation.Title</h3>

            <p class="card-text text mb-lg-3">@Model.Creation.Description</p>
        </div>

        <hr />

        <div>
            <a asp-for class="btn btn-dark text-center col-md-5" onclick="goBack()">Close</a>

            <button asp-for class="btn btn-dark float-right" onclick="likeAction()">
                <img src="~/heart.png" alt="icon" style="width: 20px" />
                <span id="likes" class="badge badge-light">@Model.Creation.LikesCount</span>
            </button>

            <a asp-controller="Comments" asp-action="Add" asp-route-id="@Model.Creation.Id" class="btn btn-dark mx-1 col-md-5">Comment</a>
        </div>

    </div>

    <input id="creationId" type="hidden" value="@Model.Creation.Id" />
</div>

<hr />

@foreach (var comment in Model.Comments)
{
    <div class="card border-dark col-md-10 offset-1 mb-2">
        <div class="card-header">
            <a asp-controller="Profiles" asp-action="Index" asp-route-id="@comment.ApplicationUserId" class="text-dark">
                <h6>@comment.ApplicationUserUserName</h6>
            </a>
        </div>

        <div class="card-body text-dark">
            <p class="card-text">@comment.Content</p>
        </div>

        <div class="mb-2">
            @if (this.User.Identity.Name == comment.ApplicationUserUserName)
            {
                <a asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id" class="btn-sm btn-dark mx-1" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
                <a asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.Id" class="btn-sm btn-dark">Edit</a>
            }

            <a asp-controller="Replies" asp-action="Add" asp-route-id="@comment.Id" class="btn-sm btn-dark mx-1 col-md-3 text-center float-lg-right">Reply</a>
        </div>

        <hr />

        @foreach (var reply in comment.Replies)
        {
            <div class="card border-dark col-md-11 offset-1 mb-2">
                <div class="card-header">
                    <a asp-controller="Profiles" asp-action="Index" asp-route-id="@reply.ApplicationUserId" class="text-dark float-right">
                        <h6>@reply.ApplicationUserUserName</h6>
                    </a>
                </div>

                <div class="card-body text-dark">
                    <p class="card-text">@reply.Content</p>
                </div>

                <div class="mb-2">
                    @if (this.User.Identity.Name == reply.ApplicationUserUserName)
                    {
                        <a asp-controller="Replies" asp-action="Edit" asp-route-id="@reply.Id" class="btn-sm btn-dark float-lg-right">Edit</a>
                        <a asp-controller="Replies" asp-action="Delete" asp-route-id="@reply.Id" class="btn-sm btn-dark mx-1 float-lg-right" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
                    }
                </div>
            </div>
        }
    </div>
}

<form method="post" id="antiForgeryForm"></form>

@section Scripts {
    <script asp-append-version="true" src="~/js/likes.js"></script>
}
