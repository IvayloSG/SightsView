@using SightsView.Web.ViewModels.Creations;
@model CreationsUploadInputModel
@{
    this.ViewData["Title"] = "Upload Creation";
}

<br />
<h1 class="text-center text-dark mb-lg-5">Share your creation</h1>

<form method="post" enctype="multipart/form-data">

    <div class="form-group col-md-6 offset-3">
        <input asp-for="Title" placeholder="Title" class="form-control text-center" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6 offset-3">
        <textarea asp-for="Description" placeholder="Description" class="form-control text-center" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6 offset-3">
        <select asp-for="Privacy" class="form-control text-center">
            <option>Public</option>
            <option>Private</option>
        </select>
    </div>
    <div class="form-group col-md-6 offset-3">
        <select asp-for="Category" class="form-control text-center" asp-items="@((IEnumerable<SelectListItem>)this.ViewData["Categories"])"></select>
    </div>
    <div class="form-group col-md-6 offset-3">
        <select asp-for="Country" class="form-control text-center" asp-items="@((IEnumerable<SelectListItem>)this.ViewData["Countries"])"></select>
    </div>
    <div class="form-group col-md-6 offset-3">
        <input asp-for="Creation" type="file" class="custom-file-input form-control" id="customFile">
        <label class="custom-file-label form-control" for="customFile">Choose file</label>
    </div>
    <div class="form-group" id="TagsContainer">
        <a asp-for="Tags" class="btn btn-success form-control col-md-6 offset-3" onclick="AddMoreTags()">Add Tags</a>
    </div>
    <input type="submit" class="btn btn-primary col-md-6 offset-3" />
</form>

@section Scripts {
    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    <script>
        var tagIndex = 0;
        function AddMoreTags() {
            $("#TagsContainer").
                append("<div class='form-group text-center col-md-6 offset-3'>" +
                    "<input class='form-control text-center' name='Tags[" + tagIndex + "].Tag Name' />" +
                "<span asp-validation-for='Tags[" + tagIndex + "]' class='text - danger'></span></div>");
            tagIndex++;
        }
    </script>
}

